# ==================== MODEL PATHS ====================
# Gradient Boosting Model (Your main model)
MODEL_PATH=modals/tuned_gradient_boosting_model.pkl
SCALER_PATH=modals/gradient_boosting_scaler.pkl
FEATURES_PATH=modals/selected_features.pkl
TRAINING_SUMMARY_PATH=modals/training_summary.pkl

# ==================== SERVER SETTINGS ====================
HOST=0.0.0.0
PORT=5000
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-in-production-2024

# ==================== API SECURITY ====================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "chrome-extension://*"]
RATE_LIMIT_PER_MINUTE=100
API_TIMEOUT=120
MAX_REQUEST_SIZE=10MB

# ==================== ANALYSIS MODULES ====================
ENABLE_DNS_ANALYSIS=true
ENABLE_HEADER_ANALYSIS=true
ENABLE_SSL_ANALYSIS=true
ENABLE_METADATA_ANALYSIS=true
ENABLE_URL_ANALYSIS=true

DNS_TIMEOUT=5
REQUEST_TIMEOUT=10
SSL_TIMEOUT=5
WHOIS_TIMEOUT=10

# ==================== RISK THRESHOLDS ====================
RISK_HIGH_THRESHOLD=0.8
RISK_MEDIUM_THRESHOLD=0.6
RISK_LOW_THRESHOLD=0.4
PHISHING_CONFIDENCE_THRESHOLD=0.7

# ==================== WEIGHTS ====================
ML_WEIGHT=0.7
HEURISTIC_WEIGHT=0.3

# ==================== CACHING SETTINGS ====================
CACHE_ENABLED=true
CACHE_TIMEOUT=300
CACHE_MAX_SIZE=1000

# ==================== LOGGING SETTINGS ====================
LOG_LEVEL=INFO
LOG_FILE=logs/phishing_detector.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ==================== PERFORMANCE SETTINGS ====================
MAX_CONCURRENT_REQUESTS=50
PREDICTION_TIMEOUT=30
PRELOAD_MODELS=true

# ==================== FEATURE SETTINGS ====================
FEATURE_VALIDATION=true
MAX_URL_LENGTH=2048
MAX_SUBDOMAIN_COUNT=10